doctype html
html.fixed
    head
        // Basic
        meta(charset='UTF-8')
        meta(name='keywords', content='HTML5 Admin Template')
        meta(name='description', content='Porto Admin - Responsive HTML5 Template')
        meta(name='author', content='okler.net')
        // Mobile Metas
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        // Web Fonts
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light', rel='stylesheet', type='text/css')
        // Vendor CSS
        link(rel='stylesheet', href='vendor/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='vendor/font-awesome/css/font-awesome.css')
        link(rel='stylesheet', href='vendor/magnific-popup/magnific-popup.css')
        link(rel='stylesheet', href='vendor/bootstrap-datepicker/css/datepicker3.css')
        // Theme CSS
        link(rel='stylesheet', href='stylesheets/theme.css')
        // Skin CSS
        link(rel='stylesheet', href='stylesheets/skins/default.css')
        // Theme Custom CSS
        link(rel='stylesheet', href='stylesheets/theme-custom.css')
        // Head Libs
        script(src='vendor/modernizr/modernizr.js')
    body
        // start: page
        section.body-error.error-outside
            .center-error
                .error-header
                    .row
                        .col-md-12
                            .row
                                .col-md-8
                                    a.logo(href='/')
                                        img(src='images/logo.png', height='54', alt='Porto Admin')
                                .col-md-4
                                    form.form
                                        .input-group.input-search
                                            input#q.form-control(type='text', name='q', placeholder='Search...')
                                            span.input-group-btn
                                                button.btn.btn-default(type='submit')
                                                    i.fa.fa-search
                .row
                    .col-md-8
                        .main-error.mb-xlg
                            h2.error-code.text-dark.text-center.text-semibold.m-none
                                | 404
                                i.fa.fa-file
                            p.error-explanation.text-center We're sorry, but the page you were looking for doesn't exist.
                    .col-md-4
                        h4.text Here are some useful links
                        ul.nav.nav-list.primary
                            li
                                a(href='#')
                                    i.fa.fa-caret-right.text-dark
                                    |  Dashboard
                            li
                                a(href='#')
                                    i.fa.fa-caret-right.text-dark
                                    |  User Profile
                            li
                                a(href='#')
                                    i.fa.fa-caret-right.text-dark
                                    |  FAQ's
        // end: page
        // Vendor
        script(src='vendor/jquery/jquery.js')
        script(src='vendor/jquery-browser-mobile/jquery.browser.mobile.js')
        script(src='vendor/bootstrap/js/bootstrap.js')
        script(src='vendor/nanoscroller/nanoscroller.js')
        script(src='vendor/bootstrap-datepicker/js/bootstrap-datepicker.js')
        script(src='vendor/magnific-popup/magnific-popup.js')
        script(src='vendor/jquery-placeholder/jquery.placeholder.js')
        // Theme Base, Components and Settings
        script(src='javascripts/theme.js')
        // Theme Custom
        script(src='javascripts/theme.custom.js')
        // Theme Initialization Files
        script(src='javascripts/theme.init.js')

