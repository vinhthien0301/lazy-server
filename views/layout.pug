doctype html
block vars
    - var app_name='Lazy Mining'

html
    head
        // Basic
        meta(http-equiv='Content-Type' content='text/html; charset=utf-8')

        meta(name="keywords", content="Lazy Mining")
        meta(name="description", content="Trang quản lý - Lazy Mining")
        meta(name="author", content="Thien, Au Vinh")

        // Mobile Metas
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

        // Web Fonts
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light')

        // Vendor CSS
        link(rel='stylesheet', href='vendor/bootstrap/css/bootstrap.css')

        link(rel='stylesheet', href='vendor/font-awesome/css/font-awesome.css')
        link(rel='stylesheet', href='vendor/magnific-popup/magnific-popup.css')
        link(rel='stylesheet', href='vendor/bootstrap-datepicker/css/datepicker3.css')
        link(rel="stylesheet" href="css/utility.css")

        block css
        // Theme CSS
        link(rel='stylesheet', href='stylesheets/theme.css')

        // Skin CSS
        link(rel='stylesheet', href='stylesheets/skins/default.css')

        // Theme Custom CSS
        link(rel='stylesheet', href='stylesheets/theme-custom.css')

