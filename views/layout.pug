        script(src="vendor/modernizr/modernizr.js")

    body
        block info
        include includes/header.pug
        include includes/innerWrapper.pug
        include includes/sidebarRight.pug


        // Vendor
        script(src="vendor/jquery/jquery.js")
        script(src="vendor/jquery-browser-mobile/jquery.browser.mobile.js")
        script(src="vendor/bootstrap/js/bootstrap.js")
        script(src="vendor/nanoscroller/nanoscroller.js")
        script(src="vendor/bootstrap-datepicker/js/bootstrap-datepicker.js")
        script(src="vendor/magnific-popup/magnific-popup.js")
        script(src="vendor/jquery-placeholder/jquery.placeholder.js")
        script(src="js/layout.js")

        block JS
        // Theme Base, Components and Settings
        script(src="javascripts/theme.js")

        // Theme Custom
        script(src="javascripts/theme.custom.js")

        // Theme Initialization Files
        script(src="javascripts/theme.init.js")

