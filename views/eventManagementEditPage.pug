block header
    header.page-header
        h2 Chi tiết sự kiện
        div(class="right-wrapper pull-right")
            ol.breadcrumbs
                li
                    a(href="dashboard")
                        i(class="fa fa-home")
                li
                    a(href="rigConfig")
                        span Danh sách máy đào
                li
                    span Chi tiết sự kiện

            a(class="sidebar-right-toggle" data-open="sidebar-right")
                i(class="fa fa-chevron-left")
block content



    div(class="row")
        div(class="col-lg-12")
            section(class="panel")
                header(class="panel-heading")
                    div(class="panel-actions")
                        a(href="#" class="panel-action panel-action-toggle" data-panel-toggle)
                        a(href="#" class="panel-action panel-action-dismiss" data-panel-dismiss)

                    h2(class="panel-title") #{data.machine_name}

                div(class="panel-body")
                        div(class="form-group")
                            label(class="col-md-3 control-label"  for="inputDefault") Tên máy
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.machine_name )
                        div(class="form-group")
                            label(class="col-md-3 control-label"  for="inputDefault") Sự kiện
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.event_code )
                        div(class="form-group")
                            label(class="col-md-3 control-label" for="inputDefault") Tin nhắn
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.message )
                        div(class="form-group")
                            label(class="col-md-3 control-label" for="inputDefault") Gợi ý
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.idea_suggested)
                        div(class="form-group")
                            label(class="col-md-3 control-label" for="inputDefault") Thứ tự card
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.card_order)
                        div(class="form-group")
                            label(class="col-md-3 control-label" for="inputDefault") Machine id
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.machine_id)
                        div(class="form-group")
                            label(class="col-md-3 control-label" for="inputDefault") Ngày
                            div(class="col-md-6")
                                input(type="text" class="form-control" disabled="" value=data.time)


                footer(class="panel-footer")
                    div(class="row")
                        div(class="col-sm-9 col-sm-offset-3")
                            button(class="btn btn-primary") Lưu và kích hoạt







